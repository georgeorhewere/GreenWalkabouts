@model IEnumerable<Walkabouts.Services.DTO.CatalogItemDTO>

@{
    ViewData["Title"] = "Catalog";
}

<h1>Catalog</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="col-md-12 products">
    <div class="row">
        @foreach (var item in Model)
        {
            <partial name="CatalogGridItem" model="item" />
        }
    </div>
</div>

<style>
    .products {
        display: flex;
        flex-wrap: wrap;
    }

    .product-card {
        padding: 2%;
        flex-grow: 1;
        flex-basis: 16%;
        display: flex;
    }
</style>