@model Walkabouts.Services.DTO.CatalogItemDTO

<div class="col-md-4 mt-2">
    <div class="card">
        <div class="bg-light p-1">
            <div class="card-title p-1 m-1">
                <h4>
                    @Model.ProductName
                    <span class="badge badge-pill">@Model.UnitPrice.ToString("c")</span>
                </h4>                    
            </div>            
        </div>
        <div class="product-image">
            @*<img src="assets/img/coat-01.jpeg">*@

        </div>
        <div class="card-body product-info bg-light text-center">
            <p>@Model.Description</p>            
        </div>
    </div>
    
</div>

