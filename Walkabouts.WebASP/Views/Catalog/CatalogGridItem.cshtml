@model Walkabouts.Services.DTO.CatalogItemDTO

<div class="col-md-4 mt-2">
    <div class="card catalog-grid-card">
        <div class="bg-light p-1">
            <div class="card-title catalog-grid-title p-1 m-1">
                <h4>
                    @Model.ProductName                    
                </h4>                    
            </div>
            <span class="card-detail-badge">@Model.UnitPrice.ToString("c")</span>
        </div>
        <div class="catalog-item-image">
            <img src="~/img/product-placeholder.png" height="150" width="150">

        </div>
        <div class="card-body bg-light text-center">
            <p class=" catalog-item-info">@Model.Description</p>            
            <span>@Html.ActionLink("more", "Details", new { id = Model.Id })</span>
        </div>
    </div>
    
</div>

